@model TravelAgency.Shared.Models.OfficialTravel

@{
    ViewData["Title"] = "Details";
}

<h1>檢視</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableUntil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableUntil)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Days)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Days)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoverPath)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CoverPath))
            {
                <img src="@Model.CoverPath" alt="封面圖片" style="max-width: 200px;" />
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedByEmployee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedByEmployee.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Region.Country)
        </dd>
    </dl>
</div>
<div>
    @if (PermissionChecker.CanManageOfficialTravels)
    {
        <a asp-action="Edit" asp-route-id="@Model?.OfficialTravelId">編輯</a>
    }
    else
    {
        <a asp-action="Edit" asp-route-id="@Model?.OfficialTravelId" class="disabled"
        tabindex="-1" aria-disabled="true" onclick="return false;">
            編輯
        </a>
    }
    |
    @if (PermissionChecker.CanViewOfficialTravels)
    {
        <a asp-action="Index">回到專案管理</a>
    }
    else
    {
        <a asp-action="Index" class="disabled"
           tabindex="-1" aria-disabled="true" onclick="return false;">
        回到專案管理
        </a>
    }
</div>
