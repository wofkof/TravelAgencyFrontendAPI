@model TravelAgencyBackend.ViewModels.Order.OrderDetailsViewModel

@{
    ViewData["Title"] = "Delete Order";
}

<h1 class="text-center mb-4">刪除訂單</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">確認刪除</h4>
        <p class="card-text">您確定要刪除這筆訂單嗎？</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MemberId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Member.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParticipantId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Participant.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParticipantsCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParticipantsCount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PaymentMethod)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PaymentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PaymentDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Note)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="OrderId" />
            @if (PermissionChecker.CanManageOrders)
            {
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            else
            {
                <input type="submit" value="Delete" class="btn btn-danger disabled"
                tabindex="-1" aria-disabled="true" onclick="return false;" />
            }
            @if (PermissionChecker.CanViewOrders)
            {
                <a asp-action="Index" class="btn btn-secondary">返回列表</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary disabled"
                   tabindex="-1" aria-disabled="true" onclick="return false;">
                返回列表
                </a>
            }
        </form>
    </div>
</div>