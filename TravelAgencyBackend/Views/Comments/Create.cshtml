@model TravelAgencyBackend.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "新增評論";
}

<h1>新增評論</h1>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <label asp-for="MemberId" class="form-label"></label>
        <select asp-for="MemberId" class="form-control" asp-items="ViewBag.MemberId"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="OrderDetailId" class="form-label"></label>
        <select asp-for="OrderDetailId" class="form-control" asp-items="ViewBag.OrderDetailId"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-control">
            @for (int i = 1; i <= 5; i++) {
                <option value="@i">@i 顆星</option>
            }
        </select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">送出</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
