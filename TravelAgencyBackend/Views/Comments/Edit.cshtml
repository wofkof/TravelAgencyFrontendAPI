@model TravelAgencyBackend.ViewModels.CommentViewModel
@using TravelAgencyBackend.Helpers

@{
    ViewData["Title"] = "編輯評論";
}

<h1>編輯評論</h1>
<hr />

<form asp-action="Edit">
    <input type="hidden" asp-for="CommentId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <label asp-for="MemberId" class="form-label"></label>
        <select asp-for="MemberId" class="form-control" asp-items="ViewBag.MemberId"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="OrderDetailId" class="form-label"></label>
        <select asp-for="OrderDetailId" class="form-control" asp-items="ViewBag.OrderDetailId"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-control" asp-items="EnumDisplayHelper.GetSelectList<ProductCategory>()"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-control">
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i" selected="@(Model.Rating == i ? "selected" : null)">@i 顆星</option>
            }
        </select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-control" asp-items="EnumDisplayHelper.GetSelectList<CommentStatus>()"></select>
    </div>

    <button type="submit" class="btn btn-primary">儲存</button>
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
