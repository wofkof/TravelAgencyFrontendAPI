@model TravelAgencyBackend.Models.District

@{
    ViewData["Title"] = "EditDistrict";
}

<h2>修改區項目</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDistrict">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="DistrictId" value="@Model.DistrictId" />
            <div class="form-group">
                <label asp-for="CityId" class="control-label">縣市</label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.Cities">
                    <option value="">請選擇縣市</option>
                </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictName" class="control-label"></label>
                <input asp-for="DistrictName" class="form-control" />
                <span asp-validation-for="DistrictName" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <input type="submit" value="修改" class="btn btn-primary" />
                <a asp-action="List" class="btn btn-secondary">返回</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
