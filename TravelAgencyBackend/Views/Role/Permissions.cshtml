@model TravelAgencyBackend.ViewModels.RolePermissionViewModel

@{
    ViewData["Title"] = "設定角色權限";
}

<h1>@Model.RoleName - 權限設定</h1>

<form asp-action="Permissions" method="post">
    <input type="hidden" asp-for="RoleId" />

    <div class="form-check">
        @for (int i = 0; i < Model.Permissions.Count; i++)
        {
            <input type="hidden" asp-for="Permissions[i].PermissionId" />
            <input type="hidden" asp-for="Permissions[i].PermissionName" />

            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox"
                       asp-for="Permissions[i].IsSelected" />
                <label class="form-check-label">
                    @Model.Permissions[i].PermissionName
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">儲存變更</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>
