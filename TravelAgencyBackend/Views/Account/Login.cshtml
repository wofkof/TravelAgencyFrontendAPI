@using TravelAgencyBackend.ViewModels
@using TravelAgencyBackend.ViewModels.Login
@model LoginViewModel

@{
    ViewData["Title"] = "員工登入系統";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                <form asp-action="Login" method="post">

                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">登入</button>
                    </div>

                    <div class="text-end">
                        <a asp-action="ForgotPassword" class="text-decoration-none">忘記密碼？</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
