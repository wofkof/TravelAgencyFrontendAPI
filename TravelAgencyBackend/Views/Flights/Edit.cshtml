@model TravelAgencyBackend.Models.Flight

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlightId" />
            <div class="form-group">
                <label asp-for="AirlineCode" class="control-label"></label>
                <input asp-for="AirlineCode" class="form-control" />
                <span asp-validation-for="AirlineCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirlineName" class="control-label"></label>
                <input asp-for="AirlineName" class="form-control" />
                <span asp-validation-for="AirlineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureAirportCode" class="control-label"></label>
                <input asp-for="DepartureAirportCode" class="form-control" />
                <span asp-validation-for="DepartureAirportCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureAirportName" class="control-label"></label>
                <input asp-for="DepartureAirportName" class="form-control" />
                <span asp-validation-for="DepartureAirportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalAirportCode" class="control-label"></label>
                <input asp-for="ArrivalAirportCode" class="form-control" />
                <span asp-validation-for="ArrivalAirportCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalAirportName" class="control-label"></label>
                <input asp-for="ArrivalAirportName" class="form-control" />
                <span asp-validation-for="ArrivalAirportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AircraftType" class="control-label"></label>
                <input asp-for="AircraftType" class="form-control" />
                <span asp-validation-for="AircraftType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightUid" class="control-label"></label>
                <input asp-for="FlightUid" class="form-control" />
                <span asp-validation-for="FlightUid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SyncedAt" class="control-label"></label>
                <input asp-for="SyncedAt" class="form-control" />
                <span asp-validation-for="SyncedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (PermissionChecker.CanManageOfficialTravels)
                {
                    <input type="submit" value="Save" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Save" class="btn btn-primary disabled"
                    tabindex="-1" aria-disabled="true" onclick="return false;" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    @if (PermissionChecker.CanViewOfficialTravels)
    {
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        <a asp-action="Index" class="disabled"
           tabindex="-1" aria-disabled="true" onclick="return false;">
        Back to List
        </a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
